<div class="body">
	<div class="container">
		<p><%= flash[:notice] %></p>
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/list', user: @detail.user, book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table table-hover table-inverse">
					<tbody>
							<tr>
								<td><%= link_to user_path(@detail.user_id) do %><%= attachment_image_tag @detail.user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %><br>
									<%= @detail.user.name %><% end %>
								</td>
								<td><%= link_to @detail.title, book_path(@detail.id) %></td>
								<td><%= @detail.body %></td>
								<% if @detail.user == current_user %>
									<td><%= link_to "Edit", edit_book_path(@detail.id) %></td>
									<td><%= link_to "Destroy", book_path(@detail.id), method: :delete, data:{ confirm: "本当に消しますか？" } %></td>
								<% else %>
								<% end %>
							</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>