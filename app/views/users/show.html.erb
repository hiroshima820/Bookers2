<div class="body">
	<div class="container">
		<p><%= flash[:notice] %></p>
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/list', user: @user, book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @user.books.each do |book| %>
							<tr>
								<td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %><% end %></td>
								<td><%= link_to book.title, book_path(book.id) %></td>
								<td><%= book.body %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
