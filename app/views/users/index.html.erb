<div class="body">
	<div class="container">
		<p><%= flash[:notice] %></p>
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/list', user: current_user, book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><%= link_to user_path(user.id) do %><%= attachment_image_tag user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %><% end %></td>
								<td><%= user.name %></td>
								<td><%= link_to "Show", user_path(user.id) %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>